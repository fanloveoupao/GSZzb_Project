<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="NoTraslucentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="NoTitleNoTraslucentTheme" parent="NoTraslucentTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line" parent="android:Widget.TextView">
        <item name="android:background">#DcDcDc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarIconStyle" parent="CustomRadioButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/selector_toolbar_text_color</item>
    </style>

    <style name="WhiteSmallButton">
        <item name="android:background">@drawable/selector_white_button_bg</item>
        <item name="android:textSize">@dimen/font_28</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="WhiteBigButton">
        <item name="android:background">@drawable/selector_white_button_bg</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/font_32</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrangeBigButton">
        <item name="android:background">@drawable/selector_orange_button_bg</item>
        <item name="android:textColor">@color/selector_orange_button_text</item>
        <item name="android:textSize">@dimen/font_32</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_project_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:textColor">@color/black_666666</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_layout_height</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:background">@color/orange_ff5500</item>
        <item name="android:textColor">@color/white_ffffff</item>
    </style>

    <style name="ActivityStyle" parent="NoTitleNoTraslucentTheme">
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:screenOrientation">portrait</item>
    </style>


    <style name="FragmentActivityStyle" parent="ActivityStyle">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--向右箭头-->
    <style name="GrayArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:src">@mipmap/arrow_gray_right</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--个人资料编辑 左侧文字说明的样式-->
    <style name="edit_personal_explain">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/font_32</item>
    </style>
    <!--个人资料编辑 右侧文字内容的样式-->

    <style name="edit_personal_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_000000</item>
        <item name="android:textColorHint">@color/gray_cccccc</item>
        <item name="android:textSize">@dimen/font_30</item>
    </style>

    <style name="InputDialogFragment" parent="TranslucentDialogFragment">
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>
    </style>

    <style name="padding_line" parent="line">
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
        <item name="background">@color/gray_E0E0E0</item>
    </style>

    <style name="activity_customize_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white_ffffff</item>
    </style>

    <style name="publish_project_choosr_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right|center</item>
        <item name="android:hint">@string/public_ywq_please_choose</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/blue_2277dd</item>
        <item name="android:textSize">@dimen/font_28</item>

    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowBackground">@drawable/drawable_white_dialog_bg</item>//背景
        <item name="android:windowIsFloating">true</item>//悬浮
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Translucent60DialogFragment" parent="TranslucentDialogFragment">
        <item name="android:windowBackground">@color/transparent_60</item>
    </style>

    <style name="PaySelectDialogFragment" parent="Translucent60DialogFragment">
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>
</resources>
