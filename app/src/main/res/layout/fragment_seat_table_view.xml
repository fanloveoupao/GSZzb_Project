<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gseasypro.app.mine.fragment.SeatTableViewFragment">

    <app.gseasypro.com.utils.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></app.gseasypro.com.utils.ui.widget.TitleBar>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/padding_5"
        android:text="主讲人 : 广技师"
        android:textColor="@color/orange_dd9900"
        android:textSize="@dimen/font_24" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:paddingLeft="@dimen/padding_5"
        android:text="广师掌中宝见面会  14:30"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/font_20" />

    <app.gseasypro.com.utils.ui.widget.SeatTableView
        android:id="@+id/seat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10" />
</LinearLayout>
