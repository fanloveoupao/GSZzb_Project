<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">


    <app.gseasypro.com.utils.ui.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"></app.gseasypro.com.utils.ui.widget.TitleBar>


    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/icon_publish_success"
        android:drawablePadding="7dp"
        android:text="提交成功"
        android:textColor="@color/green_339900"/>-->

    <TextView
        android:id="@+id/tv_project_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_40"
        android:drawablePadding="@dimen/margin_25"
        android:drawableTop="@mipmap/bottom_img_success"
        android:text="保修发布成功"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_32" />

    <LinearLayout
        android:id="@+id/ll_publish_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_30">


            <TextView
                android:id="@+id/btn_connect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_radius_10_bg"
                android:gravity="center"
                android:text="通知宿管"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/font_32" />

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/btn_look"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_stroke_orange_radius_10_bg"
                android:gravity="center"
                android:text="查看保修"
                android:textColor="@color/orange_ff9900"
                android:textSize="@dimen/font_32" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>