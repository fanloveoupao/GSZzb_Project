<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selected_blog_sub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5f5f5"
    android:orientation="vertical"
    tools:context="com.gseasypro.app.learn.activity.SelectedBlogSubActivity">

    <app.gseasypro.com.utils.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></app.gseasypro.com.utils.ui.widget.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/project_area_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/project_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="订阅博客学院"
                android:textColor="@color/gray_555555"
                android:textSize="@dimen/font_30" />

            <TextView
                android:id="@+id/project_area_detail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/area_right_btn"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="未选择"
                android:maxLines="1"
                android:textColor="@color/black_999999"
                android:textColorHint="@color/gray_bbbbbb"
                android:textSize="@dimen/font_30" />

            <ImageView
                android:id="@+id/area_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_gray" />
        </RelativeLayout>

        <View style="@style/line" />

        <RelativeLayout
            android:id="@+id/project_type_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="订阅博客类型"
                android:textColor="@color/gray_555555"
                android:textSize="@dimen/font_30" />

            <TextView
                android:id="@+id/project_type_detail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/type_right_btn"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="未选择"
                android:maxLines="1"
                android:textColor="@color/black_999999"
                android:textColorHint="@color/gray_bbbbbb"
                android:textSize="@dimen/font_30" />

            <ImageView
                android:id="@+id/type_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_gray" />
        </RelativeLayout>

        <View style="@style/line" />

        <RelativeLayout
            android:id="@+id/project_stage_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/project_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="订阅博客阶段"
                android:textColor="@color/gray_555555"
                android:textSize="@dimen/font_30" />

            <TextView
                android:id="@+id/project_stage_detail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/stage_right_btn"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="未选择"
                android:textColor="@color/black_999999"
                android:textColorHint="@color/gray_bbbbbb"
                android:textSize="@dimen/font_30"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/stage_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_gray" />
        </RelativeLayout>

        <View style="@style/line" />

        <RelativeLayout
            android:id="@+id/project_keywords_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/project_keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="订阅关键字"
                android:textColor="@color/gray_555555"
                android:textSize="@dimen/font_30" />

            <TextView
                android:id="@+id/project_keywords_detail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/keywords_right_btn"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="未添加"
                android:textColor="@color/black_999999"
                android:textColorHint="@color/gray_bbbbbb"
                android:textSize="@dimen/font_30"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/keywords_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_gray" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
