<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_viewpager_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_15"
    android:paddingRight="@dimen/padding_15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15">


        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_portrait" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_28"
                    tools:text="陈大为" />


                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/font_24"
                    tools:text="(销售经理)" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="电线电缆、配电箱、电源开关" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_32"
        tools:text="朝阳区金灶镇人民政府行政大楼" />


    <TextView
        android:id="@+id/tv_follow_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:ellipsize="end"
        android:lineSpacingExtra="7dp"
        android:maxLines="2"
        android:textSize="@dimen/font_26"
        tools:text="对内部情况清楚，据观察分析机电设备及安装材料类的产品还有部分采购需求" />


    <TextView
        android:id="@+id/btn_check_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:text="查看详细"
        android:textColor="@color/blue_1177ff"
        android:textSize="@dimen/font_24" />


    <View
        style="@style/line"
        android:layout_marginTop="@dimen/margin_20" />

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:text="适合陈大为交换项目"
        android:textSize="@dimen/font_26" />


    <TextView
        android:id="@+id/tv_exhange_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_32"
        tools:text="广州保利龙大厦广州保利龙大厦广州保利龙大厦广州保利龙大厦" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_not_suit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不适合"
            android:textColor="@color/orange_ff9966"
            android:textSize="@dimen/font_30" />


        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_orange_button_bg"
            android:gravity="center"
            android:text="私聊交换"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/font_30" />


    </LinearLayout>


</LinearLayout>