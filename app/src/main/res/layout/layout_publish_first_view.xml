<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f8f8f8"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_publishTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="发布你要进行报修的内容"
        android:textColor="@color/orange_ff5500"
        android:textSize="@dimen/font_30" />

    <!--项目名称 onStart-->


    <LinearLayout
        android:id="@+id/ll_sushe_number"
        style="@style/activity_customize_rl"
        android:background="@color/white_ffffff"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="宿舍编号"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_28" />


        <app.gseasypro.com.utils.ui.widget.EnlargeCrossEditText
            android:id="@+id/et_sushe_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_login_clear"
            android:ellipsize="end"
            android:gravity="right|center"
            android:hint="填写宿舍地址"
            android:maxEms="50"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/black_999999"
            android:textColorHint="@color/gray_bbbbbb"
            android:textSize="@dimen/font_28"
            android:visibility="visible" />


    </LinearLayout>


    <View style="@style/padding_line" />

    <LinearLayout
        android:id="@+id/ll_phone"
        style="@style/activity_customize_rl"
        android:background="@color/white_ffffff"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="联系方式"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_28" />


        <app.gseasypro.com.utils.ui.widget.EnlargeCrossEditText
            android:id="@+id/et_repair_phonee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_login_clear"
            android:ellipsize="end"
            android:gravity="right|center"
            android:hint="填写联系方式"
            android:inputType="number"
            android:maxEms="50"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/black_999999"
            android:textColorHint="@color/gray_bbbbbb"
            android:textSize="@dimen/font_28"
            android:visibility="visible" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!--项目名称 end-->


    <LinearLayout
        android:id="@+id/ll_degree"
        style="@style/activity_customize_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="紧急程度"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_28" />

        <ImageView style="@style/GrayArrow" />

        <TextView
            android:id="@+id/tv_degree"
            style="@style/publish_project_choosr_tv"
            android:textColor="@color/black_999999"
            android:textColorHint="@color/gray_bbbbbb" />

    </LinearLayout>

    <View style="@style/padding_line" />

    <LinearLayout
        android:id="@+id/ll_repair_time"
        style="@style/activity_customize_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="维修时间"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_repair_time"
            style="@style/publish_project_choosr_tv"
            android:textColor="@color/black_999999"
            android:textColorHint="@color/gray_bbbbbb" />

        <ImageView style="@style/GrayArrow" />

    </LinearLayout>

    <View style="@style/padding_line" />


    <LinearLayout
        android:id="@+id/ll_damage"
        style="@style/activity_customize_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="损坏程度"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_damage"
            style="@style/publish_project_choosr_tv"
            android:textColor="@color/black_999999"
            android:textColorHint="@color/gray_bbbbbb" />

        <ImageView style="@style/GrayArrow" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />


    <LinearLayout
        android:id="@+id/ll_price"
        style="@style/activity_customize_rl"
        android:background="@color/white_ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="其它情况"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right|center"
            android:maxLines="1"
            android:textColor="@color/blue_33aacc"
            android:textSize="@dimen/font_28"
            android:visibility="visible" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/margin_15"
        android:singleLine="true"
        android:text="一旦发现有虚假消息，将冻结账号！"
        android:textColor="@color/gray_bbbbbb"
        android:textSize="@dimen/font_26" />

    <Button
        android:id="@+id/btn_next"
        style="@style/OrangeBigButton"
        android:layout_marginBottom="@dimen/margin_50"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/margin_10"
        android:text="提交"
        android:visibility="visible" />

</LinearLayout>


