<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <app.gseasypro.com.utils.ui.widget.AdvertisementBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        app:canLoop="true"></app.gseasypro.com.utils.ui.widget.AdvertisementBanner>


    <LinearLayout
        android:id="@+id/ll_match_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_f3f3f3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="适合你的项目"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/font_30" />


            <TextView
                android:id="@+id/tv_match_project_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/shap_ff5500_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/padding_5"
                android:paddingRight="@dimen/padding_5"
                android:paddingTop="2dp"
                android:text="新增5条"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/font_24" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_gray_close" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_project_1"
            style="@style/match_project_tv_style"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/margin_15"
            tools:text="1、朝阳区人民政府" />

        <TextView
            android:id="@+id/tv_project_2"
            style="@style/match_project_tv_style"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/margin_10"
            android:visibility="gone"
            tools:text="2、朝阳区人民政府" />

        <TextView
            android:id="@+id/tv_project_3"
            style="@style/match_project_tv_style"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/margin_10"
            android:visibility="gone"
            tools:text="3、朝阳区人民政府" />

        <TextView
            android:id="@+id/tv_look_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="48dp"
            android:paddingTop="@dimen/margin_12"
            android:text="查看全部>"
            android:textColor="@color/blue_1177ff"
            android:textSize="@dimen/font_24" />

        <View style="@style/line" />


    </LinearLayout>


</LinearLayout>