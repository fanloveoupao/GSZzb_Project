<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3f3f3"
    android:orientation="vertical">


    <app.gseasypro.com.utils.ui.widget.TitleBar
        android:id="@+id/titleBar"
        style="@style/TitleBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="安全设置"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_28"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <LinearLayout
                    android:id="@+id/ll_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_setting_reset_password"
                        android:layout_width="0dp"
                        android:layout_height="48dip"
                        android:layout_weight="1"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical|left"
                        android:text="修改密码"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/font_32"/>

                    <ImageView style="@style/GrayArrow"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/private_setting"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_28"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <LinearLayout
                    android:id="@+id/black_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_setting_contacts_black_list"
                        android:layout_width="0dp"
                        android:layout_height="48dip"
                        android:layout_weight="1"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical|left"
                        android:text="@string/black_list"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/font_32"/>

                    <ImageView style="@style/GrayArrow"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/new_message_setting"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_28"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:id="@+id/ll_setting_voice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_setting_voice"
                            android:layout_width="0dp"
                            android:layout_height="48dip"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical|left"
                            android:text="@string/voice"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_32"/>

                        <app.gseasypro.com.utils.ui.widget.switchbutton.SwitchButton
                            android:id="@+id/tb_voice"
                            style="@style/SwitchButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            app:kswTintColor="@color/green_77dd77"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_dddddd"/>

                    <LinearLayout
                        android:id="@+id/ll_setting_circle_voice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_setting_circle_voice"
                            android:layout_width="0dp"
                            android:layout_height="48dip"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical|left"
                            android:text="@string/circle_voice"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_32"/>

                        <app.gseasypro.com.utils.ui.widget.switchbutton.SwitchButton
                            android:id="@+id/tb_circle_voice"
                            style="@style/SwitchButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            app:kswTintColor="@color/green_77dd77"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_dddddd"/>

                    <LinearLayout
                        android:id="@+id/ll_setting_shake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_setting_shake"
                            android:layout_width="0dp"
                            android:layout_height="48dip"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical|left"
                            android:text="@string/shake"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_32"/>

                        <app.gseasypro.com.utils.ui.widget.switchbutton.SwitchButton
                            android:id="@+id/tb_shake"
                            style="@style/SwitchButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            app:kswTintColor="@color/green_77dd77"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_dddddd"/>

                    <LinearLayout
                        android:id="@+id/ll_setting_circle_shake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_setting_circle_shake"
                            android:layout_width="0dp"
                            android:layout_height="48dip"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical|left"
                            android:text="@string/circle_shake"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_32"/>

                        <app.gseasypro.com.utils.ui.widget.switchbutton.SwitchButton
                            android:id="@+id/tb_circle_shake"
                            style="@style/SwitchButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            app:kswTintColor="@color/green_77dd77"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/other_setting"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_28"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_item"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_setting_about"
                            android:layout_width="0dp"
                            android:layout_height="48dip"
                            android:layout_weight="1"
                            android:background="@drawable/selector_item"
                            android:gravity="center_vertical|left"
                            android:text="@string/about"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_32"/>


                        <TextView
                            android:id="@+id/tv_setting_version"
                            android:layout_width="0dp"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:background="@drawable/selector_item"
                            android:gravity="center_vertical|right"
                            android:text="V%"
                            android:textColor="@color/gray_999999"
                            android:textSize="@dimen/font_32"/>

                        <ImageView style="@style/GrayArrow"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"

                        android:background="@color/gray_dddddd"/>

                    <LinearLayout
                        android:id="@+id/ll_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_item"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_setting_introduce"
                            android:layout_width="0dp"
                            android:layout_height="48dip"
                            android:layout_weight="1"
                            android:background="@drawable/selector_item"
                            android:gravity="center_vertical|left"
                            android:text="功能介绍"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_32"/>


                        <ImageView style="@style/GrayArrow"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"

                        android:background="@color/gray_dddddd"/>

                    <TextView
                        android:id="@+id/bt_setting_exit"
                        android:layout_width="match_parent"
                        android:layout_height="45dip"
                        android:background="@color/white_ffffff"
                        android:gravity="center_vertical|left"
                        android:text="@string/exit"
                        android:textColor="@color/red_dd0000"
                        android:textSize="@dimen/font_32"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dddddd"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>