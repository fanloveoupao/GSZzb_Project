<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_f3f3f3" />


        <LinearLayout
            android:id="@+id/ll_project_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_ffffff"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_18"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">-->

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="9dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_30"
                    tools:text="广州市科技产业园发展有限公司" />


                <!--    <TextView
                        android:id="@+id/tv_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_orange_empty_bg"
                        android:padding="3dp"
                        android:text="可推荐"
                        android:textColor="@color/orange_ff9900"
                        android:textSize="@dimen/font_24"
                        android:visibility="gone"/>-->


            </LinearLayout>
            -->

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_6"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/font_28"
                tools:text="甲方老板，李某某1355***（广州潮州市金盾建筑有限公司）；机电总包刘某135****项目组成机电检点寄到你家急急急" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/font_24"
                    tools:text="设备安装" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="|"
                    android:textColor="@color/black_999999" />


                <TextView
                    android:id="@+id/tv_publisher_and_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/font_24"
                    tools:text="林先生09:24前发布" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_certification_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginRight="-5dp" />


</FrameLayout>