<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_lay_setting"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/selector_card_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:duplicateParentState="true"
            android:src="@mipmap/icon_part_mine_setting" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:duplicateParentState="true"
            android:text="@string/mine_setting"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_30" />

        <TextView
            style="@style/publish_project_choosr_tv"
            android:textColorHint="@color/gray_b6b6b6" />

        <ImageView
            style="@style/GrayArrow"
            android:layout_marginRight="@dimen/margin_15" />
    </LinearLayout>
</LinearLayout>

